{
  "root": true,
  "env": {
    "es2017": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": 0,
    "no-empty": 0,
    "no-console": 0,
    "no-unused-vars": [
      "warn", {
        "varsIgnorePattern": "^_",
        "args": "none"
      }
    ],
    "strict": [2, "global"],
    "quotes": [1, "double"]
  },
  "settings": {
    "react": {
      "version": "16.6.3"
    }
  }
}
