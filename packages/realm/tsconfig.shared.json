{
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2022"
    ],
    "noResolve": true,
    "types": [
      "bson",
      "debug",
      "@realm/fetch"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests",
    "src/scripts",
    "src/platform/node",
    "src/platform/react-native",
    "src/platform/browser"
  ]
}