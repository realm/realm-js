{
	"compilerOptions": {
		"strict": true,
		"sourceMap": true,
		"module": "commonjs",
		"target": "ES2019",
		"lib": [
			"ES2019",
			"DOM"
		],
		"types": [
			"mocha",
			"puppeteer",
			"realm-web",
			"node-fetch",
			"fs-extra",
			"mocha-remote-client",
			"jwt-encode"
		],
		"typeRoots": [
			"./src/types",
			"node_modules/@types"
		],
		"outDir": "dist",
		"allowJs": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*.ts",
		"harness/**/*.ts"
	]
}
