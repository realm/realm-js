{
  "extends": [
    "@tsconfig/node-lts",
    "./tsconfig.base.json"
  ],
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "types": [
      "mocha",
      "node"
    ],
    "paths": {
      "realm/binding/core": [
        "./generated/ts/core.ts"
      ]
    }
  },
  "include": [
    "src/tests/**/*"
  ],
  "references": [
    { "path": "tsconfig.shared.json" }
  ]
}