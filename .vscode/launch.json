    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug LLDB",
            "program": "node",
            "windows": {
                "program": "C:\\Progra~1\\nodejs\\node.exe"
            },
            "cwd": "${workspaceRoot}/tests",
            "args": [
                "--inspect-brk=5858",
                "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
                "spec/unit_tests.js",
                "--filter=testRealmConstructor"
            ],
            "stopOnEntry": true
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug LLDB only",
            "program": "node",
            "windows": {
                "program": "C:\\Progra~1\\nodejs\\node.exe"
            },
            "args": [
                "${workspaceFolder}/tests/node_modules/jasmine/bin/jasmine.js",
                "spec/unit_tests.js",
                "--filter=."
            ],
            "cwd": "${workspaceFolder}/tests",
            "stopOnEntry": false,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Unit Tests (rebuild)",
            "preLaunchTask": "rebuild-node-tests",
            "cwd": "${workspaceRoot}/tests",
            "program": "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
            "args": [
                "spec/unit_tests.js",
                "--filter=."
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node Unit Tests",
            "cwd": "${workspaceRoot}/tests",
            "program": "${workspaceRoot}/tests/node_modules/jasmine/bin/jasmine.js",
            "args": [
                "spec/unit_tests.js",
                "--filter=."
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Download & Start Server",
            "cwd": "${workspaceRoot}/scripts"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "protocol": "inspector",
            "address": "localhost",
            "port": 5858
        }
    ],
    "compounds": [
        {
            "name": "Rebuild + Start Server + Debug",
            "configurations": [
                "Download & Start Server",
                "Debug Node Unit Tests (rebuild)"
            ]
        },
        {
            "name": "Debug LLDB + NodeJS",
            "configurations": [
                "Debug LLDB",
                "Attach to Port"
            ]
        }
    ]
}