{
  "name": "@realm/react-native-tests",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "wireit",
    "test": "wireit",
    "test:android": "wireit",
    "test:ios": "wireit",
    "test:catalyst": "wireit",
    "test:ci:android": "PLATFORM=android npm run common:ci",
    "test:ci:ios": "pod-install && PLATFORM=ios npm run common:ci",
    "watch:ios": "wireit",
    "watch:catalyst": "wireit",
    "watch:android": "wireit",
    "common": "wireit",
    "common:ci": "mocha-remote --template @realm/mocha-reporter --context appImporterIsRemote,$MOCHA_REMOTE_CONTEXT -- concurrently --kill-others-on-fail npm:metro npm:runner npm:app-importer",

    "lint": "eslint .",
    "app-importer": "realm-app-importer serve ../../realm-apps",
    "metro": "react-native start --reset-cache",
    "runner": "node harness/runner.js"
  },
  "wireit": {
    "start": {
      "command": "react-native start",
      "dependencies": [
        "../../tests:build-dependencies"
      ]
    },
    "test": {
      "command": "npm run test:android && npm run test:ios"
    },
    "pod-install": {
      "command": "pod-install || (bundle install && cd ios && bundle exec pod install)",
      "files": [
        "ios/Podfile",
        "../../../packages/realm/react-native/ios/realm-js-ios.xcframework"
      ]
    },
    "common": {
      "command": "mocha-remote --template @realm/mocha-reporter --context appImporterIsRemote,$MOCHA_REMOTE_CONTEXT --watch $WATCH -- concurrently --kill-others-on-fail npm:metro npm:runner npm:app-importer",
      "dependencies": [
        "../../../packages/realm:bundle",
        "../../../packages/mocha-reporter:bundle",
        "../../../packages/realm-network-transport:bundle",
        "../../../packages/realm-app-importer:bundle"
      ]
    },
    "test:android": {
      "command": "npm run common",
      "dependencies": [
        "../../../packages/realm:build:android"
      ],
      "env": {
        "PLATFORM": "android",
        "WATCH": "false"
      }
    },
    "test:ios": {
      "command": "npm run common",
      "dependencies": [
        "pod-install",
        "../../../packages/realm:build:ios"
      ],
      "env": {
        "PLATFORM": "ios",
        "WATCH": "false"
      }
    },
    "test:catalyst": {
      "command": "npm run common",
      "dependencies": [
        "pod-install",
        "../../../packages/realm:build:ios"
      ],
      "env": {
        "PLATFORM": "catalyst",
        "WATCH": "false"
      }
    },
    "watch:android": {
      "command": "npm run common",
      "dependencies": [
        "../../../packages/realm:build:android"
      ],
      "env": {
        "PLATFORM": "android",
        "WATCH": "true"
      }
    },
    "watch:ios": {
      "command": "npm run common",
      "dependencies": [
        "pod-install",
        "../../../packages/realm:build:ios"
      ],
      "env": {
        "PLATFORM": "ios",
        "WATCH": "true"
      }
    },
    "watch:catalyst": {
      "command": "npm run common",
      "dependencies": [
        "pod-install",
        "../../../packages/realm:build:ios"
      ],
      "env": {
        "PLATFORM": "catalyst",
        "WATCH": "true"
      }
    }
  },
  "dependencies": {
    "@react-native-community/art": "^1.2.0",
    "@realm/integration-tests": "*",
    "mocha": "^8.3.2",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-remote-client": "^1.6.1",
    "path-browserify": "^1.0.1",
    "react": "18.2.0",
    "react-native": "0.71.4",
    "react-native-fs": "^2.20.0",
    "react-native-polyfill-globals": "^3.1.0",
    "react-native-progress": "^4.1.2",
    "realm": "*",
    "@realm/app-importer": "*",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@babel/preset-env": "^7.14.0",
    "@realm/metro-config": "*",
    "@react-native-community/eslint-config": "^3.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "concurrently": "^6.0.2",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.73.5",
    "mocha-github-actions-reporter": "^0.2.3",
    "mocha-remote-cli": "^1.6.1",
    "pod-install": "^0.1.23"
  }
}
