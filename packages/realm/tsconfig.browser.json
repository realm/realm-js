      "composite": true,
      "outDir": "dist/platform/browser",
      "rootDir": "src/platform/browser",
      "sourceMap": true,
      "noEmit": false,
      "allowImportingTsExtensions": false,
      "types": ["@realm/fetch"],
      "lib": ["ES2020", "DOM"]
    },
    "include": [
      "src/platform/browser/**/*"
    ],
    "references": [
      { "path": "./tsconfig.shared.json" }
    ]
  }