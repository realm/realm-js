{
  "extends": [
    "@tsconfig/node-lts",
    "./tsconfig.base.json"
  ],
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strictFunctionTypes": false,
    "strictNullChecks": false,
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src/tests/**/*",
    "binding/generated/native.d.ts",
    "binding/generated/core.ts",
    "binding/dist/core.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.shared.json" }
  ]
}