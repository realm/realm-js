{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": 0,
    "no-empty": 0,
    "no-console": 0,
    "no-unused-vars": [
      "warn", {
        "varsIgnorePattern": "^_",
        "args": "none"
      }
    ],
    "strict": [2, "global"]
  }
}
