{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "es2019",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noResolve": true,
		"typeRoots": [
			"./types",
			"./node_modules/@types",
			"../../node_modules/@types",
		],
		"types": [
			"realm",
			"js-base64"
		],
		"lib": [
			"es2019"
		]
	},
	"include": [
		"types/realm/app.d.ts",
		"types/realm/bson.d.ts",
		"types/realm/services.d.ts",
		"types/realm/auth-providers.d.ts",
		"types/environment.d.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"src/dom/**/*.ts",
		"src/node/**/*.ts",
		"src/tests/**/*.ts"
	]
}