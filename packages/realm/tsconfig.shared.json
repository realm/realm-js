{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2022"
    ],
    "noResolve": true,
    "types": [
      "bson",
      "debug",
      "@realm/fetch"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/tests",
    "src/platform/node",
    "src/platform/react-native"
  ],
  "references": [
    { "path": "./tsconfig.binding.json" }
  ]
}