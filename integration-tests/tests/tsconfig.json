{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"types": ["realm", "node", "mocha", "chai"],
		"noResolve": true,
		"noImplicitAny": true,
		"lib": ["es5", "es2015", "es2015.promise", "es2015.symbol", "es2015.iterable"]
	},
	"include": ["src/**/*.ts"]
}
