{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"strictPropertyInitialization": true,
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noResolve": true,
		"noEmit": true,
		"types": [
			"@realm/fetch",
			"debug"
		],
		"lib": [
			"es2022",
			"dom"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/tests/*.ts"
	]
}