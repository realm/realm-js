{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "lib": [
      "es2021",
    ],
    "types": [
      "realm",
      "react"
    ],
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
