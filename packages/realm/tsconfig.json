{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "noResolve": true,
    "lib": [
      "ES2020"
    ],
    "types": [
      "@realm/binding"
    ]
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "src/tests/",
    "type-tests/"
  ],
}