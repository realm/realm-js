{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"outDir": "./dist",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"./node_modules/@types",
			"./types",
			"../../node_modules/@types",
		],
		"types": [
			"realm-network-transport",
			"mocha",
			"chai",
			"node",
			"bson"
		],
		"lib": [
			"ES2015",
			"DOM"
		]
	},
	"include": [
		"types/app.d.ts",
		"src/**/*.ts"
	]
}