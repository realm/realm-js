{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"types": [
			"node",
			"realm",
			"mocha",
			"chai"
		],
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
		"noImplicitAny": true,
		"lib": [
			"es5",
			"es2015",
			"es2015.promise",
			"es2015.symbol",
			"es2015.iterable"
		]
	},
	"include": [
		"src/**/typings.d.ts",
		"src/**/*.ts"
	]
}