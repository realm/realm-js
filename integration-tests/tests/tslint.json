{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      { "tabWidth": 4 }
    ],
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "variable-name": {
      "options": [
        "allow-pascal-case",
        "allow-leading-underscore",
        "require-const-for-all-caps"
      ]
    }
  }
}
