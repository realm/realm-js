{
    "extends": "@tsconfig/recommended",
    "compilerOptions": {
      "composite": true,
      "module": "es2022",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "strictFunctionTypes": false,
      "useDefineForClassFields": false,
      "customConditions": [
        "browser"
      ],
      "types": [
        "mocha",
        "chai",
        "chai-as-promised"
      ],
      "lib": [
        "dom",
        "es2022"
      ]
    },
    "include": [
      "src/typings.d.ts",
      "src/browser/**/*.ts"
    ],
    "references": [
      { "path": "./tsconfig.common.json" }
    ]
  }