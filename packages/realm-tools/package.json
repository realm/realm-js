{
  "name": "@realm/tools",
  "version": "0.0.1",
  "description": "Tools useful for working with Realms",
  "bin": {
    "realm-schema": "./dist/realm-schema.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "wireit",
    "lint": "eslint --ext .js,.ts .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "wireit": {
    "build": {
      "command": "tsc -p tsconfig.build.json",
      "dependencies": ["../realm:bundle"],
      "files": ["tsconfig.build.json", "tsconfig.json", "src"],
      "output": ["dist"]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/realm/realm-js.git"
  },
  "bugs": {
    "url": "https://github.com/realm/realm-js/issues"
  },
  "keywords": [
    "realm",
    "tool"
  ],
  "author": {
    "name": "Realm",
    "email": "help@realm.io",
    "url": "https://realm.io"
  },
  "contributors": [
    "Kenneth Geisshirt <kenneth.geisshirt@mongodb.com> (https://github.com/kneth)"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "realm": "*",
    "ts-command-line-args": "^2.2.1"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/node": "^18.15.10",
    "typescript": "^4.6.4"
  }
}
