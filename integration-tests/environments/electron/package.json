{
  "name": "@realm-tests/electron",
  "private": true,
  "description": "Test harness running the Realm JS tests in the Electron renderer process.",
  "main": "index.js",
  "scripts": {
    "start": "electron ./app/main.js",
    "test": "npm run test/main && npm run test/renderer",
    "test/main": "node ./runner.js main",
    "test/renderer": "node ./runner.js renderer",
    "postinstall": "npm run realm/install; npm run realm/rebuild",
    "realm/install": "npm install ../../realm-*.tgz --no-save",
    "realm/rebuild": "cd node_modules/realm; HOME=~/.electron-gyp node-pre-gyp rebuild --build-from-source --runtime=electron --target=3.1.1 --arch=x64 --dist-url=https://atom.io/download/electron"
  },
  "devDependencies": {
    "@realm-tests/tests": "../../tests",
    "electron": "3.1.1",
    "mocha": "^5.2.0",
    "mocha-remote-client": "^0.8.1",
    "mocha-remote-server": "^0.8.1",
    "node-gyp": "^3.7.0",
    "node-pre-gyp": "^0.10.3",
    "spectron": "^5.0.0"
  },
  "dependencies": {
    "fs-extra": "^7.0.1"
  }
}
